<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- Date title -->

    <TextView
        android:id="@+id/tvCalendarWidgetDateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:background="@drawable/calendar_item_date_title_background"
        android:textColor="@color/calendar_item_date_title_text_color"
        android:paddingLeft="@dimen/calendar_item_date_title_padding_side"
        android:paddingStart="@dimen/calendar_item_date_title_padding_side"
        android:paddingTop="@dimen/calendar_item_date_title_padding_top_bottom"
        android:paddingBottom="@dimen/calendar_item_date_title_padding_top_bottom"
        android:text="@string/test_calendar_header_text"/>

    <!-- Month days grid -->

    <com.verint.actionablecalendar.weekday.HeightWrapGridView
        android:id="@+id/hwgvCalendarWidgetContent"
        android:background="@android:color/darker_gray"
        android:numColumns="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="0dp"
        android:verticalSpacing="1dp"
        android:gravity="center"
        android:stretchMode="columnWidth"/>

</LinearLayout>